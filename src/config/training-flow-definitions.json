    "description": "Metodyczne przepływy szkoleniowe dla avatara-szkoleniowca",
    "pedagogical_framework": "Constructivist Learning Theory",
    "target_audience": "Adult learners",
    "supported_content_types": ["theory", "examples", "questions", "practice", "assessment", "summary"]
  }
