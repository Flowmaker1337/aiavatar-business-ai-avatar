{
  "flows": [
    {
      "id": "theory_introduction_flow", 
      "name": "Wprowadzenie teorii",
      "description": "Systematyczne przedstawienie teoretycznych podstaw tematu z definicjami i wyjaśnieniami",
      "entry_intents": ["theory_request", "explain_concept", "what_is"],
      "priority": 10,
      "pedagogical_type": "THEORY",
      "steps": [
        {
          "id": "concept_introduction",
          "name": "Wprowadzenie koncepcji", 
          "description": "Przedstawienie głównej koncepcji i jej znaczenia",
          "required": true,
          "next_steps": ["detailed_explanation"]
        },
        {
          "id": "detailed_explanation",
          "name": "Szczegółowe wyjaśnienie",
          "description": "Dogłębne omówienie teorii z przykładami",
          "required": true, 
          "next_steps": ["key_principles"]
        },
        {
          "id": "key_principles",
          "name": "Kluczowe zasady",
          "description": "Przedstawienie głównych zasad i reguł",
          "required": true,
          "next_steps": ["theory_summary"]
        },
        {
          "id": "theory_summary",
          "name": "Podsumowanie teorii",
          "description": "Syntetyczne podsumowanie najważniejszych punktów",
          "required": true,
          "next_steps": ["completed"]
        }
      ],
      "success_criteria": ["concept_introduction", "detailed_explanation", "key_principles", "theory_summary"],
      "max_duration": 600,
      "repeatable": true
    },
    {
      "id": "guided_practice_flow",
      "name": "Praktyka z przewodnikiem", 
      "description": "Wspólne ćwiczenie z trenerem krok po kroku z bezpośrednim wsparciem",
      "entry_intents": ["show_me_how", "practice_together", "guide_me"],
      "priority": 9,
      "pedagogical_type": "EXAMPLE", 
      "steps": [
        {
          "id": "practice_setup",
          "name": "Przygotowanie do ćwiczenia",
          "description": "Ustalenie celów i warunków ćwiczenia",
          "required": true,
          "next_steps": ["step_by_step_guidance"]
        },
        {
          "id": "step_by_step_guidance", 
          "name": "Przewodnictwo krok po kroku",
          "description": "Prowadzenie uczącego przez kolejne etapy",
          "required": true,
          "next_steps": ["feedback_loop"]
        },
        {
          "id": "feedback_loop",
          "name": "Pętla zwrotna",
          "description": "Korekta błędów i pozytywne wzmocnienia", 
          "required": true,
          "next_steps": ["practice_completion"]
        },
        {
          "id": "practice_completion",
          "name": "Zakończenie ćwiczenia",
          "description": "Podsumowanie postępów i następne kroki",
          "required": true,
          "next_steps": ["completed"]
        }
      ],
      "success_criteria": ["practice_setup", "step_by_step_guidance", "feedback_loop", "practice_completion"],
      "max_duration": 900,
      "repeatable": true
    },
    {
      "id": "question_answer_flow",
      "name": "Sesja pytań i odpowiedzi",
      "description": "Interaktywna sesja sprawdzająca zrozumienie i rozwijająca wiedzę",
      "entry_intents": ["ask_question", "check_understanding", "clarify"],
      "priority": 8,
      "pedagogical_type": "QUESTION",
      "steps": [
        {
          "id": "question_identification",
          "name": "Identyfikacja pytania",
          "description": "Dokładne zrozumienie pytania uczącego",
          "required": true,
          "next_steps": ["knowledge_retrieval"]
        },
        {
          "id": "knowledge_retrieval",
          "name": "Wyszukiwanie wiedzy",
          "description": "Odnalezienie odpowiednich informacji z bazy",
          "required": true,
          "next_steps": ["answer_formulation"]
        },
        {
          "id": "answer_formulation",
          "name": "Formułowanie odpowiedzi",
          "description": "Przygotowanie jasnej i zrozumiałej odpowiedzi",
          "required": true,
          "next_steps": ["comprehension_check"]
        },
        {
          "id": "comprehension_check",
          "name": "Sprawdzenie zrozumienia",
          "description": "Weryfikacja czy odpowiedź została zrozumiana",
          "required": true,
          "next_steps": ["completed"]
        }
      ],
      "success_criteria": ["question_identification", "knowledge_retrieval", "answer_formulation", "comprehension_check"],
      "max_duration": 300,
      "repeatable": true
    },
    {
      "id": "independent_practice_flow",
      "name": "Samodzielna praktyka",
      "description": "Ćwiczenie pozwalające na samodzielne zastosowanie wiedzy",
      "entry_intents": ["practice_alone", "try_myself", "exercise"],
      "priority": 7,
      "pedagogical_type": "PRACTICE",
      "steps": [
        {
          "id": "task_assignment",
          "name": "Przydzielenie zadania",
          "description": "Jasne określenie zadania do samodzielnego wykonania",
          "required": true,
          "next_steps": ["resource_provision"]
        },
        {
          "id": "resource_provision",
          "name": "Udostępnienie zasobów",
          "description": "Przekazanie niezbędnych materiałów i wskazówek",
          "required": true,
          "next_steps": ["progress_monitoring"]
        },
        {
          "id": "progress_monitoring",
          "name": "Monitorowanie postępów",
          "description": "Obserwacja i wsparcie w razie potrzeby",
          "required": true,
          "next_steps": ["result_evaluation"]
        },
        {
          "id": "result_evaluation",
          "name": "Ocena rezultatów",
          "description": "Analiza wykonanego zadania i feedback",
          "required": true,
          "next_steps": ["completed"]
        }
      ],
      "success_criteria": ["task_assignment", "resource_provision", "progress_monitoring", "result_evaluation"],
      "max_duration": 1200,
      "repeatable": true
    },
    {
      "id": "assessment_flow",
      "name": "Ocena i sprawdzenie",
      "description": "Formalna ocena poziomu opanowania materiału",
      "entry_intents": ["test_me", "check_knowledge", "assessment"],
      "priority": 6,
      "pedagogical_type": "ASSESSMENT",
      "steps": [
        {
          "id": "assessment_preparation", 
          "name": "Przygotowanie oceny",
          "description": "Wybór odpowiednich pytań i kryteriów oceny",
          "required": true,
          "next_steps": ["knowledge_testing"]
        },
        {
          "id": "knowledge_testing",
          "name": "Testowanie wiedzy",
          "description": "Przeprowadzenie testu lub sprawdzianu",
          "required": true,
          "next_steps": ["result_analysis"]
        },
        {
          "id": "result_analysis",
          "name": "Analiza wyników",
          "description": "Ocena poprawności odpowiedzi i poziomu zrozumienia",
          "required": true,
          "next_steps": ["feedback_delivery"]
        },
        {
          "id": "feedback_delivery",
          "name": "Przekazanie feedbacku",
          "description": "Omówienie wyników z sugestiami rozwoju",
          "required": true,
          "next_steps": ["completed"]
        }
      ],
      "success_criteria": ["assessment_preparation", "knowledge_testing", "result_analysis", "feedback_delivery"],
      "max_duration": 600,
      "repeatable": true
    },
    {
      "id": "summary_reflection_flow",
      "name": "Podsumowanie i refleksja",
      "description": "Proces podsumowania materiału i refleksji nad nauką",
      "entry_intents": ["summarize", "reflect", "what_learned"],
      "priority": 5,
      "pedagogical_type": "SUMMARY",
      "steps": [
        {
          "id": "content_recap",
          "name": "Powtórka treści",
          "description": "Przegląd najważniejszych punktów z sesji",
          "required": true,
          "next_steps": ["key_insights"]
        },
        {
          "id": "key_insights",
          "name": "Kluczowe wnioski",
          "description": "Identyfikacja głównych wniosków i odkryć",
          "required": true,
          "next_steps": ["reflection_questions"]
        },
        {
          "id": "reflection_questions",
          "name": "Pytania refleksyjne",
          "description": "Zadawanie pytań pomagających w refleksji",
          "required": true,
          "next_steps": ["next_steps_planning"]
        },
        {
          "id": "next_steps_planning",
          "name": "Planowanie kolejnych kroków",
          "description": "Określenie dalszego kierunku nauki",
          "required": true,
          "next_steps": ["completed"]
        }
      ],
      "success_criteria": ["content_recap", "key_insights", "reflection_questions", "next_steps_planning"],
      "max_duration": 400,
      "repeatable": true
    },
    {
      "id": "next_steps_flow",
      "name": "Planowanie kolejnych kroków",
      "description": "Określenie dalszych działań i ścieżki rozwoju",
      "entry_intents": ["what_next", "continue_learning", "next_topic"],
      "priority": 4,
      "pedagogical_type": "PLANNING",
      "steps": [
        {
          "id": "progress_assessment",
          "name": "Ocena postępów",
          "description": "Przegląd dotychczasowych osiągnięć",
          "required": true,
          "next_steps": ["gap_analysis"]
        },
        {
          "id": "gap_analysis",
          "name": "Analiza braków",
          "description": "Identyfikacja obszarów do dalszego rozwoju",
          "required": true,
          "next_steps": ["path_recommendation"]
        },
        {
          "id": "path_recommendation",
          "name": "Rekomendacja ścieżki",
          "description": "Sugestie co do dalszych kroków nauki",
          "required": true,
          "next_steps": ["resource_recommendation"]
        },
        {
          "id": "resource_recommendation",
          "name": "Rekomendacja zasobów",
          "description": "Wskazanie odpowiednich materiałów i narzędzi",
          "required": true,
          "next_steps": ["completed"]
        }
      ],
      "success_criteria": ["progress_assessment", "gap_analysis", "path_recommendation", "resource_recommendation"],
      "max_duration": 300,
      "repeatable": true
    }
  ],
  "flow_transitions": {
    "theory_introduction_flow": ["guided_practice_flow", "question_answer_flow"],
    "guided_practice_flow": ["independent_practice_flow", "question_answer_flow"],
    "question_answer_flow": ["theory_introduction_flow", "guided_practice_flow", "summary_reflection_flow"],
    "independent_practice_flow": ["assessment_flow", "question_answer_flow"],
    "assessment_flow": ["summary_reflection_flow", "theory_introduction_flow"],
    "summary_reflection_flow": ["next_steps_flow", "theory_introduction_flow"],
    "next_steps_flow": ["theory_introduction_flow", "guided_practice_flow"]
  },
  "metadata": {
    "version": "1.0.0",
